{
  "name": "hub-tools",
  "version": "1.0.0",
  "description": "A simple hub tool",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "lint": "eslint -c .eslintrc --ext .ts ./src",
    "start": "electron --inspect ./dist/main.js",
    "dev": "nodemon --watch \"src/**\" --ext \"ts,json\" --exec \"tsc && npm run start\""
  },
  "author": "Matheus Lopes Marques",
  "devDependencies": {
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.2.207",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "electron": "^22.2.0",
    "eslint": "^7.32.0",
    "nodemon": "^2.0.18",
    "ts-node": "^10.8.1",
    "typescript": "^4.8.3"
  },
  "type": "commonjs"
}
