{
  "compilerOptions": {
    "target": "ES6",
    "strict": false,
    "strictPropertyInitialization": false,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "noImplicitAny": false,
    "sourceMap": false,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["dist/**/*", "node_modules"]
}
